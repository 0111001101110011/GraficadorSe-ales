        <TextBox HorizontalAlignment="Left" Height="31" Margin="202,243,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="158" FontSize="20" TextChanged="TextBox_TextChanged"/>
        <Button Content="GRAFICAR" HorizontalAlignment="Left" Height="18" Margin="383,54,0,0" VerticalAlignment="Top" Width="75"/>
